{
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "eslint --fix  \"**/*.{cjs, json}\"",
		"test": "pnpm lint && vitest run",
		"update": "ncu -u",
		"release": "pnpm test && lerna publish --conventional-commits"
	},
	"devDependencies": {
		"@poidet/editorconfig": "workspace:^",
		"@poidet/eslint-config": "workspace:^",
		"@poidet/prettier": "workspace:^",
		"@types/node": "^20.11.13",
		"eslint": "^8.56.0",
		"husky": "^9.0.7",
		"lerna": "^8.0.2",
		"lint-staged": "^15.2.1",
		"prettier": "^3.2.4",
		"vitest": "^1.2.2"
	},
	"packageManager": "pnpm@8.7.0",
	"lint-staged": {
		"**/*.(ts|vue|js)": [
			"eslint --fix",
			"git add"
		],
		"**/*.*": [
			"prettier -c -u --write",
			"git add"
		]
	}
}
